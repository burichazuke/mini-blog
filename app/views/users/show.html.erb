<div class="row">

  <div class="col s3">
    <!-- Grey navigation panel -->
  <div class="container" id="sider" >
  <!-- Page Content goes here -->
  <div class="articles">
    <div class="row">
      <% if user_signed_in? %>
      <div class="col s12 center">
        <div class="card">
            <ul class="collapsible">
              <li>
                <div class="collapsible-header">
                  <%= "#{@user.name}さんのマイページ" %>
                <div class="collapsible-body"><p>Lorem ipsum dolor sit amet.</p></div>
              </li>
              <li>
                <div class="collection">
                  <% @users.each do |user| %>
                  <%= link_to user.name, user_path(user), class: "collection-item"%>

                  <% end %>
                </div>
              </li>
            </ul>
        </div>
      </div>
      <%end%>
    </div>
    </div>
  </div>

  </div>

  <div class="col s6">
    <!-- Teal page content  -->
    <div class="container">
    <!-- Page Content goes here -->
      <div class="articles">
        <div class="row">
        <% @articles.each do |article| %>
          <div class="col s12 center">
            <div class="card hoverable">
              <div class="card-image">
                <%= image_tag "#{article.image}" %>
                <span class="card-title"><%= article.title %></span>
              </div>
              <div class="card-content">
                <p><%= article.text %></p>
              </div>
              
              <div class="card-content">
              <% if user_signed_in?%>
                <% if current_user.id == article.user.id %>
                
                  <%= link_to "edit", edit_article_path(article.id), class: "btn #ffab40 orange accent-2" %>
                  <%= link_to "delete", article_path(article.id), method: :delete, class: "btn #ffab40 orange accent-2"%>
                
                <%end%>
              <%end%>  
                <p id="post_by"><%= "posted by #{article.user.name}" %></p>
              </div>
              
            </div>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="col s3", id="my">
    <div class="container">
      <div class="row">
      <% if user_signed_in?%>
        <div class="col s12 center">
          <div class="card">
            <% unless @article == nil %>
            <div class="card-image">
              <%= image_tag "#{@article.image}"  %>
            </div>
            <%end%>          
            <div class="card-panel hoverable">
              <%= link_to "マイページ", user_path(current_user.id) %>
            </div>
            
          </div>
        </div> 
      <%end%>    
      </div>
    </div>
  </div>
</div>