 
<div class="container">
  <div class="new">
    <div class="row">
      <%= form_for @article, class: "col s12" do |f| %>
        <div class="file-field input-field">
          <div class="btn">
            <span>File</span>
            <%= f.file_field :image, type: "file" %>
          </div>
          <div class="file-path-wrapper">
            <input class="file-path validate" type="text">
          </div>
        </div>
        <div class="row">
          <div class="input-field col s6">
            <%= f.text_area :title, id: "textarea2", class: "materialize-textarea", placeholder: "title" %></textarea>
            <label for="textarea2"></label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <%= f.text_area :text, id: "textarea2", class: "materialize-textarea", placeholder: "text" %></textarea>
            <label for="textarea2"></label>
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>